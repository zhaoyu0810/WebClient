{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "removeComments": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "build",
    "node_modules",
    "gen",
    "**/gen",
    "api.ts",
    "gen/api.ts",
    "gen",
    "**/gen/*"
  ],
  "include": [
    "src"
  ]
}